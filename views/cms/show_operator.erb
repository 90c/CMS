<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<%#include "cms.h" %>
<%#include "operators.h" %>
<%tfetch(QString,adminID)%>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title><%= controller()->name() + ": " + controller()->activeAction() %></title>
<style>
.maxdiv{
  position: absolute;
  background-color: #96EDFE;
  top: 106px;
  left: 350px;
  width: 460px;
  height: 330px;
  } 
.div1{
  position: absolute;
  top: 0px;
  left: 0px;
  }
.div3{
  position: absolute;
  top: 74px;
  left: 0px;
  width: 460;
  height: 180px;
  border:1px solid #429fff;
  }
.div4{
  position: absolute;
  top: 260px;
  left: 0px;
  width: 314px;
  }
.fanhui{
  position: absolute;
  left: 392px;
  top: 299px;
  width: 50px;
  }     
.table1{
  border:1px solid #429fff;
  border-collapse:collapse;
  }
.intable1{
  border-collapse:collapse;
  }  
caption{
  height:42px;
  font-family: Tahoma,Verdana,Arial;
  background-color:#66FFFF;
  font-size: 20px;
  text-align:left;
  vertical-align:top;
  }
th{
  font-family:Tahoma,Verdana,Arial;
  border: 1px solid #00FF33;
  background-color: #66FF99;
  font-size: 15px;
  font-weight: normal;
  }
.intable1 td{
  font-family:Tahoma,Verdana,Arial;
  font-size: small;
  height:20px;
  vertical-align:bottom;  
  } 
.table2 td{
 background-color: #E0E0E0;
} 
a{
  font-size: 16px;
  color: #0033FF;
  width:70px;
  text-decoration:none;
  }
a:hover{
  text-decoration:none;
}
#apDiv1 {
  position: absolute;
  width: 129px;
  height: 37px;
  z-index: 1;
  left: 514px;
  top: 51px;
}
</style>
<script language="javascript">
 var curtab = null;
 var str = null;
 function do_onclick(tab){
   if(curtab != null) curtab.style.backgroundColor = "#96EDFE"; 
    tab.style.backgroundColor = "#E0E0E0";
    curtab = tab; 
    var tds = curtab.cells;
        str =  tds[1].innerHTML;  
 }
function  xiugai(){
  if(str != null)
    document.getElementById('xiugai').href = "/Cms/edit/"+str;

}

 function dongjie(){
   if(str != null)
       document.getElementById('dongjie').href = "/Cms/change_status/"+str;
 }

function shanchu(){
  if (str != null){
    if (confirm("确定要删除吗")){
      document.getElementById('shanchu').href = "/Cms/delete_operator/"+str;
   }
  }
}

function tichu(){
  if (str != null) {
      if (confirm("确定要剔除吗")) {
        document.getElementById('tichu').href = "/Cms/remove/"+str;
      }
  }
}
</script>
</head>
<body>
<div class="maxdiv">
<div class="div1">
<table class="table1">
    <caption>
    操作员查询结果
    </caption>
    <tr>
      <th width="135" height="30" align="center" >操作员管理人编号</th>
      <th width="115" align="center">操作员编号</th>
      <th width="115" align="center">操作员简称</th>
      <th width="80" align="center">状态</th>
    </tr>
  </table>
  <div class="div3">
  <table class="intable1"> 
<% tfetch(Operators, operators); %>
<% if(operators.operatorID() != ""){%>
    <tr height="30px" onclick="do_onclick(this)">
    <td width="151" align="center" valign="top" ><%= adminID%></td>
    <td width="127" align="left"><%= operators.operatorID() %></td>
    <td width="127" align="left"><%= operators.operatorNickname()  %></td>
    <td width="55" align="left"><%= operators.operatorStatus() %></td>
    </tr> 
    <% } %>
  </table>
  </div>
  <div class="div4">
  <table width="243" height="66" border="1" cellpadding="3" class="table2">
    <tr>
      <td width="90" align="center"><a href="" id="tichu"  onclick="tichu();"/>剔除</td>
      <td width="90" align="center"><a href="" id="xiugai" onclick="xiugai();"/>修改</a></td>
      </tr>
    <tr>
      <td align="center" width="90"><a href="" id="dongjie"  onclick="dongjie();"/>冻结/解冻</a></td>
      <td align="center" width="90"><a href="" id="shanchu"  onclick="shanchu();"/>删除</a></td>
      </tr>
  </table>
  </div>
</div>
<div class="fanhui">
  <a href="/Cms/list_operator/<%=adminID%>">返回</a>
  </div>
</div>
<div id="apDiv1"><p style="color: red"><%=$ error %></p></div>
</html>
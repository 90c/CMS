<!doctype html>
<%#include "marketingunit.h" %>
<% tfetch(QVariantMap, marketingunit); %>
<html>
<head>
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
	<link rel="stylesheet" type="text/css" href="/easyui/themes/default/easyui.css">
	<link rel="stylesheet" type="text/css" href="/easyui/themes/icon.css">
	<link rel="stylesheet" type="text/css" href="common.css">
	<style type="text/css">
#customers
  {
  width:510px;
  border-collapse:collapse;
  empty-cells: hide;
  position: relative;
  left: 0px;
  top: 0px;
  }

#customers td, #customers th 
  {
  font-size:0.7em;
  border:1px solid #95B8E7;
  padding:6px 7px 5px 7px;
  }

#customers th 
  {
  font-size:0.7em;
  text-align:center;
  padding-top:5px;
  padding-bottom:4px;
  background-color:#F3F3F3;
  color:black;
  }

#customers tr, #customers td
  {
  color:#000000;
  }
</style>
</head>
 <body style="margin-top:4px;padding-left:4px;">
  <div class="easyui-tabs" style="width:100%;height:360px;" >
    <div title="编辑交易单元列表" style="width:600px;height:100%;padding:10px;">
      <p style="color: red"><%=$ error %></p>
      <p style="color: green"><%=$ notice %></p>
      <h1>编辑交易单元列表</h1>
<table id="customers">
  <%== formTag(urla("save", marketingunit["muid"]), Tf::Post) %>
  <tr>
    <th>编号</th>
    <td><input type="text" name="marketingunit[muid]" value="<%= marketingunit["muid"] %>" style="border-style:solid;border-width:0" readonly="readonly" /></td>
  </tr>

  <tr>
    <th>估值</th>
    <td><input type="text" name="marketingunit[muvalue]" value="<%= marketingunit["muvalue"] %>" /></td>
  </tr>

  <tr>
    <th>简称</th>
    <td><input type="text" name="marketingunit[musname]" value="<%= marketingunit["musname"] %>" /></td>
  </tr>

  <tr>
    <th>长名称</th>
    <td><input type="text" name="marketingunit[muname]" value="<%= marketingunit["muname"] %>" /></td>
  </tr>

  <tr>
    <th>日期</th>
    <td><input type="text" name="marketingunit[mudate]" value="<%= marketingunit["mudate"] %>" style="border-style:solid;border-width:0" readonly="readonly"/></td>
  </tr>

  <tr>
    <th>源单元编号</th>
    <td><input type="text" name="marketingunit[srcUnitID]" value="<%= marketingunit["srcUnitID"] %>" style="border-style:solid;border-width:0" readonly="readonly"/></td>
  </tr>

  <tr>
    <th>目标单元编号</th>
    <td><input type="text" name="marketingunit[destUnitID]" value="<%= marketingunit["destUnitID"] %>"style="border-style:solid;border-width:0" readonly="readonly"/></td>
  </tr>

  <tr>
    <th>操作员编号</th>
    <td><input type="text" name="marketingunit[operatorID]" value="<%= marketingunit["operatorID"] %>" style="border-style:solid;border-width:0" readonly="readonly"/></td>
  </tr>

</table>	
    </div>  
  </div>
         <p>
          <input type="submit" value="Update" />
         </p>
</form>
        <%== linkTo("Back", urla("index")) %>
</body>
</html>

